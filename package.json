{
  "name": "cwt-2025",
  "version": "1.0.0",
  "description": "Seminar presentation slides using vertical scroll and Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/index.css -o ./public/assets/css/index.css",
    "watch:css": "tailwindcss -i ./src/css/index.css -o ./public/assets/css/index.css --watch",
    "serve": "npx serve public -p 8000",
    "browser-sync": "browser-sync start --server public --port 8000 --files 'public/**/*' --no-notify --no-open",
    "dev": "npm-run-all --parallel watch:css browser-sync"
  },
  "keywords": [
    "scroll",
    "tailwind",
    "presentation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.0",
    "vite": "^6.3.6",
    "vite-plugin-html": "^3.2.2"
  }
}
